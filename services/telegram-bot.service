[Unit]
Description=EasyClaw Telegram Bot Bridge
After=network-online.target claude-code.service
Wants=network-online.target

[Service]
Type=simple
User=%%USER%%
WorkingDirectory=%%HOME%%/.easyclaw/scripts
EnvironmentFile=%%HOME%%/.easyclaw/.env
ExecStart=/usr/bin/python3 %%HOME%%/.easyclaw/scripts/telegram-bot.py
Restart=always
RestartSec=10s
StartLimitBurst=3
StartLimitIntervalSec=60

[Install]
WantedBy=multi-user.target
